<h1>----------订单信息-------------------</h1>
@if (Model.listorderinfo != null)
{
<table class="table table-striped table-bordered table-hover dataTables-example">
        <tr>
             <td>订单号</td>
             <td>订单备注</td>
        </tr>
        @foreach (var item in Model.listorderinfo)
        {
            <tr>
                <td>@Html.DisplayFor(itemmodel => item.OrderNum)</td>
                <td>@Html.DisplayFor(itemmodel => item.OrderDes)</td>
            </tr>         
        }
    </table>
}
