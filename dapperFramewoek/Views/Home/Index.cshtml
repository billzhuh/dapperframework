@model IEnumerable<dapperFramewoek.Models.Account>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<p>

     @Html.ActionLink("订单列表", "Index","OrderInfo")
    @Html.ActionLink("新增", "Create")
    @Html.ActionLink("多表查询列表", "List")
</p>
@using (Ajax.BeginForm("Index", "Home", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "gray-bg", OnSuccess = "sbm" }, htmlAttributes: new { @class = "form-inline" }))
{
   
    <div class="form-group">
        &nbsp;姓名：<input type="text" id="key" class="form-control" name="name" style="margin-bottom: 5px;">

        <button class="btn btn-white" type="submit">查询</button>

        <a class="btn btn-outline btn-success" href="/Home/Index"><i class="glyphicon glyphicon-refresh"></i></a>
    </div>
}
<table class="table table-striped table-bordered table-hover dataTables-example">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Flag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AgeStr)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeStr)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                 @Html.ActionLink("Get", "Get", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div class="page">
    @Html.Raw(ViewBag.PageList)
</div>
