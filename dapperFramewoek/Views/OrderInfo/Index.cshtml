@model IEnumerable<dapperFramewoek.Models.OrderInfo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Ajax.BeginForm("Index", "OrderInfo", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "gray-bg", OnSuccess = "sbm" }, htmlAttributes: new { @class = "form-inline" }))
{
   
    <div class="form-group">
        &nbsp;姓名：<input type="text" id="key" class="form-control" name="key" style="margin-bottom: 5px;">

        <button class="btn btn-white" type="submit">查询</button>

        <a class="btn btn-outline btn-success" href="/OrderInfo/Index"><i class="glyphicon glyphicon-refresh"></i></a>
    </div>
}
<table class="table table-striped table-bordered table-hover dataTables-example">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<div class="page">
    @Html.Raw(ViewBag.PageList)
</div>
